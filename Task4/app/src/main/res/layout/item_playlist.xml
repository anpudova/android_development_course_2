<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Have you listened to recently"
            android:textColor="@color/color_text_main"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/rl_playlist"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_head"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/iv_playlist"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/favourite_1" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/iv_playlist"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_playlist"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="bottom"
                    android:text="Favorites"
                    android:textColor="@color/color_text_main"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_playlist_tracks"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="top"
                    android:text="10 tracks"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageView
                android:id="@+id/iv_etc"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/etc" />
        </RelativeLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.cardview.widget.CardView>